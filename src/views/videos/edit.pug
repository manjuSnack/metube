extends ../base.pug 

block content 
    h4 Edit Video 
    form(method="POST")
        input(name="title", placeholder="Video Title", type="text", value=video.title, required)
        input(name="description", placeholder="Description", type="text", value=video.description, required, minlength=20)
        input(name="hashtags", placeholder="Hashtags, separated by comma.", type="text", value=video.hashtags.join(), required)
        input(value="Save", type="submit")